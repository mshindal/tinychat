//- The View for a chat window. Initially in the 'Disconnected' state.

extends layout

block content
	.container
		.row
			.col-xs-12
				.panel.panel-default#chatPanel
					.panel-body#chat
		.row
			.col-xs-12
				.input-group#chatGroup
					input.form-control#chatBox(type="text")
					span.input-group-btn
						button.btn.btn-primary#sendButton(type="button") Send
			.col-xs-12
				span.label.label-danger#statusLabel Disconnected

block scripts
	script(src="/socket.io/socket.io.js")
	script(src="/js/chat.js")
